<% if @vacation.errors.any? %>
<%= render partial: '/errors', locals: { record: @vacation } %>
<% end %> 


<%= form_for @vacation do |f| %>
    
    
    <%= f.label :country %>
    <br>
    <select name="country" >
    <% LocationScraper.scrape_locations.each do |country| %>
      <option value="" disabled selected hidden>Choose a Country...</option>  
      <option> <%= country %> </option> 
        <% end %> 
        </select>
        
        

    <div class="form-group">
    <%= f.label :city, "Please enter a city name" %>
    <br>
    <%= f.text_field :city, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <br>
      <%= f.text_field :description, class: "form-control" %>
    </div>
  

    <div class="form-group">
      <%= f.label :duration, "How long where you/would you be there?" %>
      <br>
      <%= f.text_field :duration, class: "form-control" %>
      
    </div>

    <div class="form-group">
      <%= f.label :solo_traveler, "Solo Traveler?" %>
      <br>
      <%= f.select :solo_traveler, options_for_select([['Yes', 'yes'], ['No', 'no']], selected: @vacation.solo_traveler),{}%>
    </div>
    <br>

    <div class="actions">
      <br/>
      <%= f.submit class: "btn btn-primary" %>
    </div>
  
  <% end %> 