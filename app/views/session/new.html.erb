<h1> Log in </h1>

<p><i><%= @error %></i></p>


<%= form_tag('/login', method: :post) do %>


    <div class="form-group">
  
      <%= label_tag(:username, "Username:") %>
      <%= text_field(:username, class: "form-control") %>

    </div>
  
    <div class="form-group">

      <%= label_tag(:password, "Password:") %>
      <%= password_field_tag(:password, nil, class: "form-control") %>

    </div>
  
    <div class="actions">
      <%= submit_tag("Log In") %>
    </div>
  
  <% end %>